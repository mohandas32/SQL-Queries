@model CoolCare.Models.User

@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/FormLayout.cshtml";
}
@{
    Html.RenderPartial("~/Views/Shared/HeaderPartialView.cshtml");
}

<link href="~/Content/CoolCare/css/UserLogin.css" rel="stylesheet" />


<h2>ForgetPassword</h2>
<div class="container">
    @using (Html.BeginForm())
    {
    <h2 class="text-white mt-5">FORGET PASSWORD</h2>
        @Html.AntiForgeryToken()

        <div class="row needs-validation form-horizontal">
          
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-12 ">

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="col-12 text-center mt-3">

                <button class="btn btn-primary px-3 py-2 submitButton mt-3" type="submit">
                    Verify
                </button>
            </div>
        </div>
       
    }



</div>
    
   