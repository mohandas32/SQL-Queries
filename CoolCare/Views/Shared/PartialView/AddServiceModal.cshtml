

@using (Html.BeginForm("AddServices", "Services", FormMethod.Post))
{
    @Html.AntiForgeryToken()


    <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Add Service
    </button>


    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">ADD Technician</h5>

                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="text" name="servicename" class="form-control" required placeholder="Enter Service Name" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">

                            <textarea class="form-control" cols="46"  rows="4" required name="servicedesc">

                            </textarea>

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="number" name="price" class="form-control" required placeholder="Enter Price" />
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <input type="submit" value="ADD" class="btn btn-primary" />

                </div>
            </div>
        </div>
    </div>





}

