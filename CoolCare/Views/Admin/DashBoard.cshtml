@if ((bool)ViewBag.showAlert)
{



    <script src="~/Content/AdminDashboard/asset/vendor/jquery/jquery.min.js"></script>



    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
        <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
        </symbol>
        <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
        </symbol>
        <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </symbol>
    </svg>



    <div class="alertParent" style="display:none;">
        <div class="alert mt-5 alert-success d-flex align-items-center justify-content-end CoolCareAlert" role="alert" style="width: 320px; position: fixed; top: 35px; right: 0; z-index: 10;">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill" /></svg>
            <div>
                Welcome, @Session["userName"]
            </div>
            <button type="button" class="btn-close ms-4" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>




    <script>
        $(document).ready(function () {
            $('.alertParent').show();
            $('.alertParent').css("display", "block");
            setTimeout(function () {
                $('.alertParent').fadeOut('slow');
                $('.alertParent').css("display", "none !important");
            }, 5000);
        });
    </script>
}




@if (((int)Session["userTypeid"]) == 2)
{

    <h2 align="center">WELCOME TO TECHNICIAN DASHBOARD</h2>


}
else
{
    <h2 align="center">WELCOME TO ADMIN DASHBOARD</h2>


    <div class="row mt-3">
        <!-- No of users -->
        <div class="col-xl-3 col-md-4 mb-4">
            <div class="card border-left-primary shadow h-80 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Current Users
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.usercount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- No of technicians -->
        <div class="col-xl-3 col-md-4 mb-4">
            <div class="card border-left-success shadow h-80 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                No. Of Technicians
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.techniciancount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- active Packages -->
        <div class="col-xl-3 col-md-4 mb-4">
            <div class="card border-left-info shadow h-80 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Active Packages
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">2</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- user feedback -->
        <div class="col-xl-3 col-md-4 mb-4">
            <div class="card border-left-warning shadow h-80 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                User Feedback
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.feedbackcount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="bg-light font-weight-bold">
                        <tr>
                            <td>#</td>
                            <td>SERVICE ID</td>
                            <td>SERVICE NAME</td>
                            <td>SERVICE DESCRIPTION</td>
                            <td>ADDRESS</td>
                            <td>TECHNICIAN</td>
                            <td>ASSIGN TECHNICIAN</td>
                            <td>ACTION</td>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.ServiceList.Count(); i++)
                        {
                            <tr>
                                @using (Html.BeginForm("AssignTechnician", "Admin", FormMethod.Post))
                                {

                                    <td></td>
                                    <td>@Model.ServiceList[i].ServiceId</td>
                                    <td>@Model.ServiceList[i].Service.ServiceName</td>
                                    <td>@Model.ServiceList[i].Service.ServiceDescription</td>
                                    <td>@Model.ServiceList[i].Address</td>
                                    <td>@Model.userList[i].FirstName @Model.userList[i].LastName</td>

                                    @*@if (i.ServiceStatus == 0)
                                        {*@

                                    <td>
                                        <input type="hidden" name="ServiceId" value="@Model.ServiceList[i].ServiceId" /> <!-- for getting service id-->
                                        @Html.DropDownList("AssignedTechnician", new SelectList(ViewBag.technicianList, "UserId", "FirstName"), "Select Technician", new { @class = "form-control" })
                                    </td>
                                    <td>
                                        <button type="submit" class="btn btn-info" id="saveTechnician">SAVE</button>

                                    </td>

                                }
                                <!--}
                                else
                                {
                                    <td><p>Name Of Assigned Technician</p></td>-->
                                @*<td><button type="button" class="btn btn-dark">Add Technician</button></td>*@
                                <!--}-->
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>

    </div>

    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {

            let table = new DataTable("#dataTable")


        })
    </script>

}



