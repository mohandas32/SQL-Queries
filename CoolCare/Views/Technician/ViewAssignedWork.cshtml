@model List<CoolCare.Models.Bookservice>
@{
    ViewBag.Title = "ViewAssignedWork";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<!--datatable css link-->
<link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet" />

<h2 align="center" class="mb-5">SERVICE DETAILS</h2>

<!-- DataTales Example -->
<div class="card shadow mb-4">

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="bg-light font-weight-bold">
                    <tr>
                        <td>SERVICE ID</td>
                        <td>SERVICE NAME</td>
                        <td>SERVICE DESCRIPTION</td>
                        <td>CUSTOMER NAME</td>
                        <td>CUSTOMER ADDRESS</td>
                        <td>CUSTOMER MOBILE</td>
                        <td>GENERATE REPORT</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                    <tr>
                        <td>@i.ServiceId</td>
                        <td>@i.Service.ServiceName</td>
                        <td>@i.Service.ServiceDescription</td>
                        <td>@i.User.FirstName @i.User.LastName</td>
                        <td>@i.User.Address</td>
                        <td>@i.User.MobileNumber</td>
                        <td><a href="@Url.Action("TechWorkDoneReport","technician", new {serviceid = i.ServiceId, customerid = i.User.UserId })"><button class="btn btn-info">REPORT</button></a></td>

                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!--datatable js link-->
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {

        let table = new DataTable("#dataTable")
    })
</script>

